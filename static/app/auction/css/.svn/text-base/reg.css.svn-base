#l_left { width: 770px; float: left; display: inline; height: 279px; padding: 96px 0 0 0;}
#l_left label { width: 130px; padding: 0 8px 0 0; text-align: right; display: inline-block;}
#l_left a { color: #0f5fb8;}
#l_left .input1, #l_left .input2 { padding: 3px; border: 1px solid #acacac; width: 176px;}
#l_left .input2 { width: 64px; margin: 0 8px 0 0;}
#l_left p { margin: 0 0 19px 0;}
#l_left p span { color: #999; margin: 0 0 0 15px;}
#l_left p.btn { padding: 0 0 0 138px;}
#l_left p.btn button { background: url(../images/reg_btn.gif) no-repeat; width: 117px; height: 32px; line-height: 32px; text-align: center; color: #fff; font-size: 14px; font-weight: bold; border: 0; cursor: pointer;}
#l_left p.btn a { margin: 0 0 0 21px;}
#l_left p.code { margin-top: -4px; margin-bottom: 27px;}
#l_left p.code img { position: relative; top: 9px; *top: 5px;}
#l_left p.code a.change { margin: 0 0 0 18px;}

#l_right { width: 186px; float: right; display: inline; height: 289px; background: url(../images/login_right_bg.gif) no-repeat left 40px; padding: 86px 0 0 34px; color: #575757;}
#l_right a.btn { display: inline-block; width: 114px; height: 32px; line-height: 32px; background: url(../images/reg_btn2.gif) no-repeat; font-size: 14px; font-weight: bold; color: #333; text-align: center; margin: 11px 0 29px 0;}
#l_right li { line-height: 26px;}
#l_right li a { color: #0f5fb8; display: inline-block; background: url(../images/login_icon.gif) no-repeat left center; padding: 0 0 0 23px;}
#l_right li a.a2 { background: url(../images/login_icon2.gif) no-repeat left center;}
#l_right p.p2 { margin: 0 0 11px 0;}

