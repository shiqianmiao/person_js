<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>backend demo -- datepicker</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script src='http://static.273.cn/g.js' type="text/javascript"></script>
<script src='http://static.273.cn/config.js' type="text/javascript"></script>
<link href='http://static.273.cn/app/backend/css/bootstrap.css' type="text/css" rel="stylesheet"></link>
</head>
<body>
<input type="text" id="start_input" data-widget="datepicker" placeholder="起始日期">
<input type="text" id="end_input" data-widget="datepicker" placeholder="终止日期">
<script type="text/javascript">
G.use(['app/backend/js/backend.js'], function (Backend) {
    Backend.widget('#start_input').ready(function () {
        var start_dp = this;
        start_dp.element.on('changeDate', function () {
            Backend.widget('#end_input').ready(function () {
                this.setStartDate(start_dp.getDate());
            });
        });
    });
    Backend.run();
});
</script>
</body>
</html>
