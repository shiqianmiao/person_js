body { font-family: "宋体"; font-size: 12px;}
body,h1,h2,h3,h4,h5,h6,p,ul,li,dl,dt,dd,form,input,select,button { margin: 0px; padding: 0px;}
img { border: 0;}
ul,li { list-style-type: none;}
input,select,button { font-family: "宋体"; font-size: 12px;}
a:link,a:visited { color: #000; text-decoration: none;}
a:hover { text-decoration: underline;}
.clear { clear: both; height: 0; font-size: 0;}
hr { margin: 0; *margin: -7px 0 -7px 0; height: 0; border: none; border-top: 1px solid #f00; display: block;}

/*清浮动代码*/
/* Clear Fix */
.clearfix:after { content:"."; display:block; height:0; clear:both; visibility:hidden;}
.clearfix { display:inline-block;}
/* Hide from IE Mac */
.clearfix { display:block;}
/* End hide from IE Mac */
/* end of clearfix */



/*样式开始*/

/*主站部分(头部共用)*/
#top_nav { background: #f8f8f8; border-bottom: 1px solid #e7e7e7; height: 24px; line-height: 24px;position:relative;z-index:4;}
#top_nav .tel { float: left; display: inline; color:#989898;}
#top_nav .tel strong { color: #f37c06;}
#top_nav .nav{ float: right; display: inline;}
#top_nav .nav a.navlink{float:left;padding:0 7px 0 5px;height:24px;line-height:24px;display:inline-block;text-align:center;background: url(../images/top_nav_bg.png) no-repeat 100% 6px; border-left:1px solid #f8f8f8; border-right:1px solid #f8f8f8;}
#top_nav .nav a.navlink b{font-weight:100;background:url(../images/top_nav_bg.png) no-repeat 100% -26px;padding-right:13px;}
#top_nav .nav span{float:left;}
#top_nav .nav span.on{position:relative;display:inline-block;line-height:24px;height:24px;}
#top_nav .nav span.on a.navlink{position:relative;z-index:3;background:#fff;border:#d3d3d3 solid 1px;border-bottom:0;border-top:0;padding:0 7px 0 5px;}
#top_nav .nav span.on a.navlink:hover{text-decoration:none;}
#top_nav .nav span.on #chewuzhi,#top_nav .nav span.on #daohang{display:block;}
#top_nav .nav a.last{background:none;}

#daohang,#chewuzhi{display:none;position:absolute;box-shadow: #ccc 1px 1px 5px;top:23px;left:-167px;z-index:2;width:200px;overflow:hidden;border:1px solid #d3d3d3;background:#fff;padding:10px 20px;color:#6d6d6d;}
#chewuzhi form{width:210px;}
#chewuzhi h5{font-size:12px;font-family:"宋体";font-weight:bold;}
#chewuzhi p.des{border-bottom:1px dotted #ccc;}
#chewuzhi p.mail{padding:11px 0 0 0;margin:0 10px 10px 0;padding-bottom:15px;border-bottom:1px #d3d3d3 dotted;color:#989898;}
#chewuzhi p.mail input{border:1px solid #c3c3c3;width:160px;padding:2px;height:18px;font-family:Arial;color:#989898;margin:6px 0 7px 0;}
#chewuzhi p.mail input.on{color:#333;}
#chewuzhi p.mail button{width:68px;height:21px;line-height:21px;border:1px #F9CEA4 solid;background:#FFECD7;color:#F37C06;font-weight:bold;text-align:center;cursor:pointer;}
#chewuzhi p.mail button.no{background:#eee;border-color:#d3d3d3;color:#989898;cursor:auto;}
#pop-chewuzhi .share{clear:both;}
#daohang{width:400px;left:-391px}
#daohang ul{float:left;margin-left:10px;}
#daohang ul li{width:70px;height:24px;font-weight:700;overflow:hidden;}
#daohang ul li a{font-weight:100;}
#daohang ul li b a{font-weight:100;color:#f50;}


