/*遮罩层*/
.mask_layer{background:#000;height: 100%;width: 100%;left: 0;top: 0;opacity: 0.5;position: absolute;z-index: 10;}
/*弹出层*/
.pop_box {width:410px;border:5px #8E8E8F solid;position:absolute;top:0;left:0;background:#FCFCFC; z-index: 99;}
.pop_box h4{background:#f0f0f0;height:26px;line-height:26px;padding:2px 20px;font-size:14px;position:relative;}
.pop_box h4 span.close{display:block;width:30px;height:30px;background:url(../images/p.png) no-repeat -140px -270px;text-indent:-82982px;right:0;top:0;position:absolute;cursor:pointer;}
.pop_box .content { padding: 27px 0 25px 0;}
.pop_box .input_box { margin: 0 0 13px 0;}
.pop_box label { display: inline-block; width: 89px; text-align: right; font-size: 14px; color: #a3a3a3; padding: 0 13px 0 0;}
.pop_box label em { font-style: normal; color: #e20000; margin: 0 6px 0 0;}
.pop_box .input1 { font-size: 12px; padding: 5px 5px 4px 5px; border: 1px solid #cecece; width: 222px;}
.pop_box .select1 { width: 112px; margin: 0 10px 0 0;}
.pop_box .btn { margin: 0 0 10px 0;}
.pop_box .btn button { margin: 0 10px 0 0; font-size:14px; width:110px; height:28px; line-height:28px; border:1px #F8CEA3 solid; background:#FFECD7; color:#F37C06; cursor:pointer; font-weight:700;}
.pop_box .btn button.cancel{border-color:#cecece;background:#f2f2f2;color:#888;}
.pop_box .warm_tips { color: #a3a3a3; line-height: 18px; padding: 3px 34px 0 34px;}
.pop_box .bottom_tips { font-size: 14px; line-height: 40px; background: #efefef;}
.pop_box .bottom_tips p { margin: 0 0 0 20px;}
.pop_box .bottom_tips i { display: inline-block; width: 14px; height: 40px; vertical-align: middle; background: url(../images/rp.png) no-repeat left -1480px; margin: 0 9px 0 0;}
.pop_box .bottom_tips strong { color: #ff7e00;}