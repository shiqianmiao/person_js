body { font-family: "宋体"; font-size: 12px;}
body,h1,h2,h3,h4,h5,h6,p,ul,li,dl,dt,dd,form,input,select,button { margin: 0px; padding: 0px;}
img { border: 0;}
ul,li { list-style-type: none;}
input,select,button { font-family: "宋体"; font-size: 12px;}
a:link,a:visited { color: #000; text-decoration: none;}
a:hover { text-decoration:underline;}
.clear { clear: both; height: 0; font-size: 0;}
hr { margin: 0; *margin: -7px 0 -7px 0; height: 0; border: none; border-top: 1px solid #f00; display: block;}

/*清浮动代码*/
/* Clear Fix */
.clearfix:after { content:"."; display:block; height:0; clear:both; visibility:hidden;}
.clearfix { display:inline-block;}
/* Hide from IE Mac */
.clearfix { display:block;}
/* End hide from IE Mac */
/* end of clearfix */

#banner{width: 100%;}
#main .head{width: 982px;height: 65px;}
#main .head img{width: 982px;height: 65px;}
#main .top-30{top: -30px;}
#main .content{height: 320px;background: #fffcf3;}
#main .content .left{position: absolute;top: 85px;left: 20px;width: 411px;height: 261px;}
#main .content .right{position: absolute;top: 85px;right: 20px;width: 504px;height: 260px;}

.about{position: relative;width: 982px;margin: 0 auto;}
.about .content .bg{background: url(../images/market_templet/bg_about.jpg) no-repeat;}
.about .content .left .title{background: url(../images/market_templet/act_title.jpg) no-repeat 0 0; position: absolute; top: 32px; left: 15px; width: 360px; }
.about .content .left .title a{display: inline-block; float: right; background: #61a632 url(../images/market_templet/icon_pen.jpg) no-repeat 0 0; padding-left: 35px; width: 75px; height: 30px;line-height: 30px;font-size: 14px;font-weight: bold;color: #fff;}
.about .content .left .title a:hover {text-decoration:none;}
.about .content .left .detail{position: absolute; top: 70px; left: 15px; width: 380px;}
.about .content .left .detail p{ line-height: 30px;color: #7f5700; font-size: 14px;font-family: Microsoft YaHei;clear: both;}
.about .content .left .detail p span.t{float: left;}
.about .content .left .detail p span.s{width:260px;float:left;}
.about .content .left .detail small{float: left; background: url(../images/market_templet/i_round.png) no-repeat 0 0;display: inline-block;width: 22px;height: 23px;line-height: 23px;margin: 5px 10px 0 0;text-align: center; color: #fff;}
.about .content .left .detail .note{padding-left: 100px;}
.about .content .left .detail .tit{color: #ca2947;}
.about .content .right img{width: 504px; height: 250px;}
.route{position: relative;width: 982px;margin: -20px auto 0 auto;}
.route .content .right .address{padding-top: 10px;line-height: 25px;}
.route .content .right .address p{font-size: 14px;}
.route .content .right .address span{color: #a3a3a3;}
.route .content .right .address .tel{color: #ca2947;}
.route .content .right .find .sub_title {width: 446px; height: 36px;background: #f5f5f5;margin: 12px 0;}
.route .content .right .find .sub_title a{display:inline-block;width: 140px; height: 34px;line-height: 34px;color: #000;text-align: center;margin: 2px 0 0 1px;}
.route .content .right .find .sub_title a.current{background: #fff;font-weight: bold;}
.route .content .right .find .sub_title a:hover {text-decoration:none;}
.route .content .right .find .input_box{position: relative;width: 430px;height: 28px;background: #fff;border: 1px solid #dedede;font-size: 14px;margin-bottom: 10px;}
.route .content .right .find .input_box label{color: #a3a3a3;position: absolute;top: 5px;left: 12px;}
.route .content .right .find .input_box .input1{position: absolute;top: 0;left: 50px;width: 380px;height: 28px;line-height: 28px;border: 0;}
.route .content .right .find .btn button{width: 104px;height: 28px;line-height: 28px;border: 0;background: #116ba9;font-weight: bold;color: #fff;cursor: pointer;text-align: center;}
