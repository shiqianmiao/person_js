<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>cross domain parent</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script src='http://sta.273.com.cn/g.js' type="text/javascript"></script>
<script src='http://sta.273.com.cn/config.js' type="text/javascript"></script>
</head>
<body>
<div id="tip">我是一个tip</div>
<button id="demo">创建弹出层</button>
<script type="text/javascript">
G.use(['jquery', 'widget/dialog/dialog.js'], function ($, Dialog) {

    $('#demo').click(function () {
        var dialog = new Dialog({
            title : '跨域',
            // width : 600,
            // height : 300,
            skin : 'black'
        });

        dialog.ready(function () {
            this.open('http://static.273.cn/widget/dialog/iframe.html', function () {
                this.register('setTip', function () {
                    $('#tip').html(Array.prototype.slice.call(arguments).join(' '));
                });
            });

        });

        // for test
        window.dialog = dialog;
        window.Dialog = Dialog;
        window.$ = $;
    });

});
</script>
</body>
</html>
