<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>backend demo</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script src='http://static.273.cn/g.js' type="text/javascript"></script>
<script src='http://static.273.cn/config.js' type="text/javascript"></script>
<link href='http://static.273.cn/app/backend/css/bootstrap.css' type="text/css" rel="stylesheet"></link>
</head>
<body>

<div>
<a href="javascript:void(0);" data-action-type="confirm" id="1">confirm</a>
<a href="javascript:void(0);" data-action-type="confirm" id="2" data-widget="chart">confirm</a>
<a href="javascript:void(0);" data-action-type="nothing" id="3">nothing</a>
<a href="javascript:void(0);" id="4">alert-success</a>
<a href="javascript:void(0);" id="5">alert-info</a>
<a href="javascript:void(0);" id="6">alert-warning</a>
<a href="javascript:void(0);" id="7">alert-error</a>
</div>


<script type="text/javascript">
G.use(['jquery', 'app/backend/js/backend.js'], function ($, Backend) {

    Backend.widget('#2').ready(function () {
        console.log(this, arguments);
    });
    Backend.run();

    Backend.on('confirm', function (e) {
        console.log(this, arguments);
    });

    Backend.on('cancel', function (e) {
        console.log(this, arguments);
    });

    Backend.widget('#1').ready(function () {
        console.log(this, arguments);
    });

    Backend.ready(function () {
        console.log('backend is ready~~');
    });

    Backend.widget('#1').ready(function () {
        console.log(this, arguments);
    });

    $('#4').click(function () {
        Backend.trigger('alert-success', '亲，你答对了～～');
    });

    $('#5').click(function () {
        Backend.trigger('alert-info', '亲，友情提示～～');
    });

    $('#6').click(function () {
        Backend.trigger('alert-warning', '靠，我警告你～～');
    });

    $('#7').click(function () {
        Backend.trigger('alert-error', 'fuck，你说错啦～～');
    });

});
</script>
</body>
</html>
