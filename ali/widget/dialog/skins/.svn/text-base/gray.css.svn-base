@charset "utf-8";

body {
    margin: 0px;
    padding: 0px;
}

.ui-dialog {
    position: absolute;
    top: -1990px;
    left: -1990px;
    border: 6px solid #BFBFBF;
}

/* ie6 bug*/
.ui-dialog table {
    border-collapse: separate;
    _border-collapse:collapse;
}

.ui-dialog table td{
    padding: 0px;
}

.ui-dialog-tl,
.ui-dialog-tc,
.ui-dialog-tr {
    background-color: #F2F2F2;
}
.ui-dialog-cl,
.ui-dialog-cc,
.ui-dialog-cr,
.ui-dialog-bl,
.ui-dialog-bc,
.ui-dialog-br {
    background-color: #fff;
}

.ui-dialog-tr {
    width: 5px;
    height: 35px;
}
.ui-dialog-bl,
.ui-dialog-br {
    width: 5px;
    height: 5px;
}

