.ui-dialog-cr {
}

.ui-dialog-bl {
}

.ui-dialog-bc {
}

.ui-dialog-br {
}

.ui-header-header,
.ui-dialog-main,
.ui-dialog-footer {
    font-family: 'Microsoft Yahei', Tahoma, Arial, Helvetica, STHeiti;
    _font-family: Tahoma,Arial,Helvetica,STHeiti;
}
.ui-dialog-header{
    font-size: 14px;
    font-family: SimSun;
}

.ui-dialog-main {
    font-size: 14px/1.1;
}

.ui-dialog-footer {
    font-size: 12px;
}

.ui-dialog-bar {
    position: relative;
    height: 0px;
    bottom: 35px;
    _bottom: 0px;
    _margin-top: -34px;
}

a.ui-dialog-close {
    position: absolute;
    top: 0px;
    _top: -1px;
    right: -5px;
    text-decoration: none;
    color: transparent;
    _color: #E6E6E6;
    width: 35px;
    height: 35px;
    line-height: 35px;
    background: #E6E6E6 url(gray/close.gif) no-repeat;
}

.ui-dialog-close:hover {
}

.ui-dialog-title {
    color: #494949;
    height: 35px;
    line-height: 35px;
    _height: 34px;
    _line-height: 24px;
    text-indent: 20px;
    font-weight: bold;
    padding-right: 20px;
}
.ui-dialog-content {

    _zoom : 1;
    /*height : 100%;*/
    word-break: break-all; /*firefox 长英文长数字不折行问题*/
    /*padding: 25px 20px; 参数设置*/
    /*width: 300px; height: 300px; 参数设置 或者 iframe load获取高度*/
}

.ui-dialog-content iframe {
    width: 100%;
    height: 100%;
}

.ui-dialog-buttons {
    text-align: right;
    padding: 10px 5px 5px 5px;
    white-space: nowrap;
}
.ui-dialog-button {
    margin-left: 15px;
    padding: 4px 6px;
    cursor: pointer;
    background-color: #F2F2F2;
    border: 1px solid #E1E1E1;
    color: #494949;
    display: inline-block;
    text-decoration: none;
}



.ui-dialog-resize {
    cursor: se-resize;
}

.ui-dialog-drap {
    cursor: move;
}

.ui-dialog-loading {
    background: url('black/loading.gif')  no-repeat center center;
    height: 8px;
    width: 60px;
    margin: 0 auto;
}